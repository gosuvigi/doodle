{
  "name": "football-doodle",
  "version": "0.0.1",
  "description": "Create doodles for planning footbal matches",
  "author": "vigi",
  "main": "src/js/app.js",
  "dependencies": {
    "classnames": "^2.1.3",
    "events": "^1.0.2",
    "flux": "^2.1.1",
    "fluxxor": "^1.7.1",
    "jquery": "^2.1.4",
    "lodash.assign": "^3.2.0",
    "object-assign": "^1.0.0",
    "react": "^0.13.3",
    "react-bootstrap": "^0.24.5",
    "react-widgets": "^2.8.0"
  },
  "devDependencies": {
    "babel-core": "^5.6.18",
    "babel-loader": "^5.3.1",
    "browser-sync": "^2.8.2",
    "browserify": "^6.3.4",
    "browserify-shim": "^3.8.2",
    "envify": "^3.4.0",
    "exorcist": "^0.4.0",
    "gulp": "^3.8.11",
    "gulp-less": "^3.0.3",
    "gulp-minify-css": "~0.5.1",
    "gulp-sourcemaps": "^1.5.0",
    "gulp-uglify": "^1.1.0",
    "gulp-util": "^3.0.4",
    "html-webpack-plugin": "^1.6.0",
    "lodash": "^3.3.1",
    "merge-stream": "^0.1.7",
    "pretty-hrtime": "~1.0.0",
    "react-hot-loader": "^1.3.0",
    "reactify": "^0.15.2",
    "require-dir": "^0.1.0",
    "uglify-js": "~2.4.24",
    "vinyl-source-stream": "~1.0.0",
    "vinyl-transform": "~1.0.0",
    "watchify": "^3.3.1",
    "webpack": "^1.12.0",
    "webpack-dev-server": "^1.10.1"
  },
  "scripts": {
    "start": "cd src/js && watchify app.js -o 'exorcist bundle.js.map > bundle.js' --verbose --debug  --poll=150",
    "build": "browserify . -t [envify --NODE_ENV production] | uglifyjs -cm > src/js/bundle.js",
    "build-webpack": "webpack --progress --profile --colors",
    "watch": "webpack-dev-server --hot --inline --progress --colors"
  },
  "browserify": {
    "transform": [
      "browserify-shim",
      "reactify",
      "envify"
    ]
  },
  "browserify-shim": {
    "plugin": {
      "exports": "plugin",
      "depends": [
        "jquery:$"
      ]
    }
  },
  "engines": {
    "node": ">=0.12.0"
  }
}
